<body>
  <div id="header"></div>
  <div class="limiter">
    <div style="background-image: url('img/bg.png') ;" class="container-login">

      <div class="wrap-login">
        <div class="text-center">
          <img class="my-3 d-none d-lg-inline d-md-inline" src="img/logo.png" alt="logo" width="100px"
            height="100px">
          <h3>International Airlines</h3>
        </div>
        <form class="login-form" action="/auth" method="post">
          <span class="login-form-title mb-4">Sign In</span>
          <label for="name">Username</label>
          <div class="wrap-input">
            <input type="text" name="username" id="username" class="inputcustom" placeholder="Enter Your Name" required><br>
          </div>
          <div class="my-2 ml-2"><span>Password</span>
            <!--<a href="#" class="ml-3">forgot Password?</a>-->
          </div>
          <div class="wrap-input">
            <input type="password" name="password" id="password" class="inputcustom" placeholder="Enter Your Password" required>
          </div>
          <a  class="btn btn-success mx-5 my-5" id="submit" type="submit"
            >Sign in &nbsp;&nbsp; &#8594;</a>
          <a href="index" class="btn btn-danger mx-5 my-5">Cancel &nbsp;&nbsp; &#8592;</a>
          <div class="text-center w-full">
            <span class="txt2">Not a member yet?</span>
            <a href="createAccount"  class="txt2">SIGN UP</a>
          </div>
        </form>
      </div>
    </div>
  </div>
